<!-- Loop over each object in the blogpost array -->
{{#each blogposts as |blogpost|}}
  <div class="col-md-12 mb-4 project">
    <div class="row mt-4 blogpost-header">
      <div class="col-md-6">
        <h2>
          <a class="blogpost-name-link" href="/blogpost/{{blogpost.id}}">{{blogpost.name}}</a>
        </h2>
      </div>
      <div class="col-md-6 created-by">
        <p>Created by
          {{blogpost.user.name}}
          on
          {{format_date blogpost.date_created}}</p>
      </div>
    </div>
    <div class="row mt-4 blogpost-desc">
      <p>
        {{blogpost.description}}
      </p>
    </div>
  </div>
{{/each}}
