<div class="display-flex justify-space-between">
  <h2>{{name}}</h2>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>
<div>
  <p>{{description}}</p>
</div>

{{#if comment.length}}
  <div class="col-md-6 comment-list">
    <h3>Current Comments:</h3>

    {{#each comments as |comment|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/comment/{{comment.id}}">{{comment.name}}</a></h4>
        </div>
        <div class="col-md-4">
            <p>
            {{comment.description}}
            </p>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}

<div class="display-flex justify-space-between">
  <form class="form new-comment-form">
    <div class="form-group">
      <label for="comment-desc">Comment:</label>
      <textarea
        class="form-input"
        id="comment-desc"
        name="comment-desc"
      ></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="align-center btn btn-primary">+ Add Comment</button>
    </div>
  </form>
</div>
