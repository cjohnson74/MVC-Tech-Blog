<div class="display-flex justify-space-between">
  <h2>{{name}}</h2>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>
<div>
  <p>{{description}}</p>
</div>

<div class="display-flex justify-space-between">
  <form class="form new-comment-form">
    <div class="form-group">
      <label for="comment-name">Title:</label>
      <input
        class="form-input"
        type="text"
        id="comment-name"
        name="comment-name"
      />
    </div>
    <div class="form-group">
      <label for="comment-desc">Content:</label>
      <textarea
        class="form-input"
        id="comment-desc"
        name="comment-desc"
      ></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="align-center btn btn-primary">+ Add Comment</button>
    </div>
  </form>
</div>
{{#if comments.length}}
  <div class="col-md-6 comment-list">
    <h3>Current Comments:</h3>

    {{#each comments as |comment|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/comment/{{comment.id}}">{{comment.name}}</a></h4>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}
