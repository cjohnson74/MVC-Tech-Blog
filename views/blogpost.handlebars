<div class="col-md-12 mb-4">
  <div class="row mt-4 blogpost-header">
    <div class="col-md-6">
      <h2 class="blogpost-name-not-link">{{name}}
      </h2>
    </div>
    <div class="col-md-6 created-by">
      <p><span data-id={{id}} id="blogpost-id"></span> Created by {{user.name}} on {{format_date date_created}}</p>
    </div>
  </div>
  <div class="row mt-4 blogpost-desc">
    <p>{{description}}</p>
  </div>
</div>

{{#if comments.length}}
  <div class="col-md-6 comment-list">
    <h3>Current Comments:</h3>

    {{#each comments as |comment|}}
      <div class="row mb-2">
        <div class="col-md-4">
          <p>
            {{ddescription}}
          </p>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}

<div class="col-md-12 mb-4 project">
  <form class="form new-comment-form">
    <div class="row mt-4 blogpost-header">
      <div class="col-md-12">
        <h3 class="blogpost-name-not-link">Comment:</h3>
      </div>
    </div>
    <div class="row mt-4 blogpost-desc">
      <textarea
        class="form-input"
        id="comment-desc"
        name="comment-desc"
      ></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="align-center btn btn-primary">+ Add Comment</button>
    </div>
  </form>
</div>